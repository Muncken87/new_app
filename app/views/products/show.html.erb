<div class="container products-show-page">
  <div class="show">
    <form accept-charset="UTF-8" action="/" method="post">
    <input name="utf8" type="hidden" value="&#x2713;" />
    <input name="authenticity_token" type="hidden" value="J7CBxfHalt49OSHp27hblqK20c9PgwJ108nDHX/8Cts=" />
  </form>
  <div class="row">
    <div class="col col-md-6">
      <%= image_tag(@product.image_url, class: "img-responsive")  %>
      <div class="thumbnails">
        <div class="col col-md-3 col-xs-3 placeholder">
          <%= image_tag("item1.jpg",class: "img-responsive")%>
        </div>
        <div class="col col-md-3 col-xs-3 placeholder">
          <%= image_tag("item2.jpg",class: "img-responsive")%>
        </div>
        <div class="col col-md-3 col-xs-3 placeholder">
          <%= image_tag("item3.jpg",class: "img-responsive")%>
        </div>
        <div class="col col-md-3 col-xs-3 placeholder">
            <%= image_tag("item4.jpg",class: "img-responsive")%>
        </div>
            <div class="clearfix"></div>
      </div>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>

    <div class="col col-md-6">
      <h1 class="name"><%= @product.name %></h1>
        <p><div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      <h2 class="price"><%= @product.price %></h2>
      <strong>Description:</strong>
      <p class="description"><%= @product.description %></p>
      <strong>Color:</strong>
      <p class="colour"><%= @product.colour %></p>
      <% if signed_in? %>
        <hr>
        <h4>Add a review:</h4>
          <%= form_for([@product, @product.comments.build]) do |f| %>

              <%= f.label :body, "Comments" %><br>
              <%= f.text_area :body, class: "form-control review-text" %>
              <%= f.label :rating %><br>
              <div class="rating"></div>
              <%= f.submit "Submit", class: "btn btn-default" %>
          <% end %>
      <% end %>
      <%= render 'comments' %>
    </div>
    <div class="clearfix"></div>
  </div>
  </div>
</div>
