<div class="container contact-view">
<section class="contact">
  <h1>Contact</h1>
  <p>Contact me for more info or if you have any questions about this app</p>
  <%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>

    <div class="form-group">
      <%= label_tag :name, "Name" %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message, "Message" %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message",cols: 20, rows: 5 %>
    </div>
<%= submit_tag "Send",class: "btn btn-default" %>
<% end %>
</section>
</div>
