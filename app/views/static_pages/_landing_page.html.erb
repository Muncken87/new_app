<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @products.length.times do |i, index| %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= i %>" <%= "class=active" if i == 0 %>></li>
    <% end %>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @products.each do |product| %>
    <div class="item<%= " active" if product == @products.first %>"style="background-image: url('<%= image_url(product.image_url) %>')">
      <div class="carousel-caption">
        <h2 class="info-text"><%= product.name %></h2>
        <span class="info-price"><%= product.price.to_s  %></span>
      </div>
    </div>
    <% end %>
  </div>


</div>
